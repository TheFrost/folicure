.ia-Content
  clearfix()
  relative false false
  padding-top 59px
  padding-bottom 43px
  min-height 100%
  background-color black

  +above(991px)
    float right

    padding-top 0
    width calc(100% \- 150px)

  &Header
    position relative
    padding 32px 0
    text-align center
    &__title
      margin 0
      font-family Nexabold
      font-size 22px
      text-transform uppercase
      color white
      &:after
        content ''
        display block
        width 32px
        height 4px
        margin 16px auto
        background-color #fff

    &__txt
      display block
      padding 0 16px
      color c__gray--gama

  &Body
    clearfix()
    +above(1024px)
      height 100%

  &--frontpage,
  &--grid,
  &--product-grid
    +above(1024px)
      min-height 1200px
      height 100%
