/*Mixins*/
retina-query(n, w, h)
  @media
  (-webkit-min-device-pixel-ratio: 2),
  (min-resolution: 192dpi)
    background-image url("../images/"n"@2x.png")
    background-size w h


/*Utilities*/
.u-Container
  center(1170px)

  padding 0 1em

.u-ListNoStyle
  margin 0
  padding 0

  list-style none

.u-Block
  display block

.u-Clearfix
  overflow hidden
  clear both

.u-ImgResponsive
  display block
  width 100%
  max-width 100%
  height auto

.u-ExaLight
  font-family NexaLight


/*JS elements*/
.js-noscroll {
  overflow: hidden;
}
