/*single settings layout*/
.ia-Content
  &--single
    min-height 0 !important
    height auto !important
    background-color c__gray--teta !important
    .ia-Content
      &Header
        height 149px
        background url('../images/bg-blog-header.jpg') no-repeat center center
        background-size cover


/*Single styles*/
.ia-Single
  position relative
  max-width 738px
  margin-top -50px
  margin-left 16px
  margin-right 16px
  padding 16px 16px 70px
  background-color c__gray--beta
  +above(832px)
    margin-left auto
    margin-right auto
    padding 32px


  /*Controls*/
  &__home
    position absolute
    bottom 16px
    right 16px
    display none
    width 34px
    height 34px
    line-height 34px
    text-align center
    color white
    border 1px solid white
    transition all 0.33s easing( 'in-out-cubic' )
    +above(991px)
      display block
    &:hover
      background-color c__gray
  &__ctrl
    position fixed
    top calc(50% \- 43px)
    transform translateY(-50%)
    display none
    +above(991px)
      display block
    &.disabled
      &:hover
        .ia-Single__ctrl__title
          transform none
      a[rel="next"],
      a[rel="prev"]
        background-color lighten(c__gray, 20%)
        pointer-events none
        cursor default
    &--next
      right 0
      &:hover
        .ia-Single__ctrl__title
          transform translateX(-100%)
      .ia-Single__ctrl__title
        left 0
    &--prev
      left 150px
      &:hover
        .ia-Single__ctrl__title
          transform translateX(100%)
      .ia-Single__ctrl__title
        right 0
    a[rel="next"],
    a[rel="prev"]
      position relative
      z-index 11
      display block
      padding 50px 16px
      font-size 24px
      background-color c__gray
      color white
      transition all 0.33s easing( 'in-out-cubic' )
      &:hover
        background-color darken(c__gray, 10%)
    &__title
      position absolute
      top 0
      width 200px
      height 100%
      z-index 10
      transition all 0.33s easing( 'in-out-cubic' )
      background-color c__gray
      &:hover
        background-color darken(c__gray, 10%)
      h1
        position absolute
        top 50%
        transform translateY(-50%)
        width 100%
        margin 0
      a[rel="next"],
      a[rel="prev"]
        display block
        padding 16px
        font-size 16px
        color white

  /*Controls Mobile*/
  &__ctrl-m
    position fixed
    width 100%
    bottom 43px
    clearfix()
    +above(991px)
      display none
    a
      span(1/3)
      padding 8px
      text-align center
      font-size 16px
      background-color c__gray
      color white
      &:nth-child(1)
        border-right 1px solid rgba(c__gray--gama, 0.5)
      &:nth-child(3)
        border-left 1px solid rgba(c__gray--gama, 0.5)
      &.disabled
        background-color lighten(c__gray, 20%)
        pointer-events none
        cursor default

  /*Content*/
  &__title
    margin 0
    font-size 20px
    font-family NexaBold
    letter-spacing 1px
    text-align center
    text-transform uppercase
    +above(768px)
      font-size 32px
    +above(1024px)
      font-size 40px
    &:after
      content ''
      display block
      width 100px
      height 5px
      margin 32px auto
      background-color black
  &__content
    > h2
      margin 0
      margin-bottom 16px
      font-size 18px
      +above(768px)
        font-size 20px
    > h3
      font-size 16px
      margin 0
    > p
      margin-top 0
      margin-bottom 32px
      font-weight 300
      font-size 16px
    > blockquote
      padding 0
      margin 32px 0
      font-size 20px
      font-style italic
      color c__blue
      +above(768px)
        font-size 32px
    > img
      margin 32px 0
    em
      transition all 0.33s easing( 'in-out-cubic' )
      word-wrap break-word
      -ms-word-wrap break-word
      white-space normal
    a
      word-wrap break-word
      -ms-word-wrap break-word
      white-space normal
      text-decoration underline
      color c__gray
      &:hover
        color c__blue


  /*Share*/
  &__footer
    padding 32px 0
    text-align center
  &__share
    position relative
    display inline-block
    width 40px
    height 40px
    text-align center
    line-height 40px
    border 1px solid black
    transform rotate(45deg)
    transition all 0.33s easing( 'in-out-cubic' )
    &:hover
      transform rotate(0)
      .ia-Single__share__icon
        transform rotate(0)
    &__icon
      position relative
      top 2px
      display inline-block
      transform rotate(-45deg)
      transition all 0.33s easing( 'in-out-cubic' )
