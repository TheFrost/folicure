/*Local Mixin*/
set-color-theme-grid(base, gradient, opacity-value)
  if !opacity-value
    opacity-value = 1

  background-color gradient

  .ia-BrickProduct
    background-linear-gradient(180deg, rgba(white,0.1), 0, rgba(gradient,opacity-value), 130%)
    +above(768px)
      background-linear-gradient(180deg, rgba(white,0.1), 60%, rgba(gradient,opacity-value), 100%)

  .ia-Product
    &__header
      &:after
        background-color base
    &__category
      background-color base
    &__type
      color base
    &__tag
      color base



/*column settings product grid view*/
.ia-Content
  &--product-grid
    +above(1024px)
      min-height 1200px
      height 100%

    .ia-ContentHeader
      background url('../images/bg-product-header.jpg') no-repeat center center
      background-size cover

    .ia-ContentBody
      +above(1024px)
        height calc(100% \- 149px)

    .ia-Column
      &:nth-child(1)
        .ia-Brick
          +above(1024px)
            &:nth-child(1)
              border-right 2px solid white
              border-bottom 2px solid white
            &:nth-child(2)
              border-top 2px solid white
              border-right 2px solid white
      &:nth-child(2)
        .ia-Brick
          +above(1024px)
            &:nth-child(1)
              border-bottom 2px solid white
              border-left 2px solid white
            &:nth-child(2)
              border-top 2px solid white
              border-left 2px solid white


/*Product grid*/
.ia-Content
  &--product-grid,
  &--search
    .ia-Brick
      &Link
        +below(1024px)
          height 600px
      &Product
        absolute 0
        display block
        text-align center
        padding 32px
        .ia-Product
          &__desc,
          &__fig
            +above(1024px)
              position absolute
          &__desc
            display inline-block
            padding-top 0
            max-width: 280px
            margin-bottom 32px
            top 25%
            &:after
              margin-bottom 0
            +above(1024px)
              margin-bottom 0
          &__text
            margin-bottom 0
            text-align center
          &__tag
            font-weight 700
          &__category,
          &__type
            +above(991px)
              font-size 14px
            +above(1366px)
              font-size 20px
          &__fig
            display block
            margin 0 auto
            bottom 0
            width 200px
            +above(1024px)
              width 250px
            +above(1366px)
              width 280px
            &--d
              display none
              +above(1024px)
                display block
            &--m
              display block
              +above(1024px)
                display none

      /*Position settings*/
      &--t-b
        .ia-BrickProduct
          .ia-Product
            &__desc
              right 35%
              +above(1280px)
                right 45%
            &__fig
              left 47%
              +above(1100px)
                left 50%
      &--b-t
        .ia-BrickProduct
          .ia-Product
            &__desc
              left 45%
              +above(1280px)
                left 45%
            &__fig
              right 50%
              +above(1100px)
                right 55%

      /*Color settings*/
      &--original
        set-color-theme-grid(c__original, c__original, 0.3)
      &--extra
        set-color-theme-grid(c__extra, c__extra--alpha, 0.5)
      &--hidratante
        set-color-theme-grid(c__hidratante, c__hidratante, 0.3)
      &--control
        set-color-theme-grid(c__control, c__control, 0.3)
