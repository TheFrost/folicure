.ia-Product
  clearfix()
  text-align center
  +above(1024px)
    absolute 50% false false 0
    transform translateY(-50%)
  &__column
    col(1/2)
  &__item
    clearfix()
    display inline-block
    width 100%
    max-width 800px


  // Color Settings


  // Owl Carousel Settings
  .owl-nav
    fixed 50% 0 false false
    transform translateY(-50%)
  .owl-next,
  .owl-prev
    width 40px
    height 40px
    line-height 40px
    text-align center
    background-color c__gray
    color white
    &:hover
      background-color darken(c__gray, 10%)
